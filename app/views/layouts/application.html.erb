<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

		<header class="navbar navbar-inverse">
			<div class="container-fluid">
		        	<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#mobile-nav-collapse">
                		        	<span class="sr-only">Toggle navigation</span>
                        			<span class="icon-bar"></span>
                        			<span class="icon-bar"></span>
                       				<span class="icon-bar"></span>
                			</button>

					<%= link_to 'Scott Finkelstein', root_url, id: 'logo' %>
				</div>
				<div class="collapse navbar-collapse" id="mobile-nav-collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><%= link_to 'portfolio', pages_portfolio_path %>
						<li><%= link_to 'resume', pages_resume_path %></li>
					</ul>
				</div>
			</div>
		</header>

<%= yield %>

</body>
</html>
